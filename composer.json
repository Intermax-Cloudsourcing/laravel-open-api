{
    "name": "intermax/laravel-open-api",
    "description": "Generate Open Api specification from Laravel routes.",
    "keywords": ["api", "open api", "laravel"],
    "authors": [
        {
            "name": "Patrick Hoogkamer",
            "email": "p.hoogkamer@intermax.nl"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "cebe/php-openapi": "^1.4",
        "fakerphp/faker": "^1.0",
        "laravel/framework": "^7.0 || ^8.0",
        "phpdocumentor/reflection-docblock": "^5.2"
    },
    "require-dev": {
        "intermax/php-integration-tools": "^2.0",
        "orchestra/testbench": "^6.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Intermax\\LaravelOpenApi\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Intermax\\LaravelOpenApi\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Intermax\\LaravelOpenApi\\OpenApiServiceProvider"
            ]
        }
    },
    "repositories": {
        "intermax": {
            "type": "composer",
            "url": "https://development.intermax-pages.nl/tools/composer-repository/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit --colors=always",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test": [
            "@test:lint",
            "@test:unit",
            "@test:types"
        ]
    }
}
